<div class="flex flex-row items-center justify-between">
  <div class="flex flex-row items-center space-x-3">
    {{#if @onDeleteAttendance}}
      <button type="button"
        class="text-gray-400 hover:text-red-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
        {{on "click" (fn @onDeleteAttendance @attendance)}}>
        {{svg-jar "outline-trash" class="h-5 w-5"}}
      </button>
    {{/if}}
    {{#if (eq @label "event")}}
      <LinkTo @route="events.event" @model={{@attendance.event.id}} class="text-gray-900 text-sm">
        <div class="flex flex-col space-y-1 sm:flex-row sm:items-baseline sm:space-x-1">
          <span>{{@attendance.event.name}}</span>
          <span>{{format-date @attendance.event.startDate "Pp"}}</span>
        </div>
      </LinkTo>
    {{else}}
      <LinkTo @route="people.person" @model={{@attendance.person.id}} class="text-gray-900 text-sm">
        {{@attendance.person.givenName}} {{@attendance.person.familyName}}
      </LinkTo>
    {{/if}}
  </div>
  <div>
    <button
      type="button"
      {{on "click" this.togglePresence}}
      class="inline-flex items-center p-2 border border-transparent rounded-full text-white {{if @attendance.isPresent "bg-green-600" "bg-gray-300"}} hover:bg-green-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
      {{svg-jar "outline-check" class="h-6 w-6"}}
    </button>
    <button
      type="button"
      {{on "click" this.toggleAbsenceWithReason}}
      class="inline-flex items-center p-2 border border-transparent rounded-full text-white {{if @attendance.isAbsentWithReason "bg-amber-600" "bg-gray-300"}} hover:bg-amber-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500">
      {{svg-jar "outline-minus" class="h-6 w-6"}}
    </button>
    <button
      type="button"
      {{on "click" this.toggleAbsenceWithoutReason}}
      class="inline-flex items-center p-2 border border-transparent rounded-full text-white {{if @attendance.isAbsentWithoutReason "bg-red-600" "bg-gray-300"}} hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
      {{svg-jar "outline-x" class="h-6 w-6"}}
    </button>
  </div>
</div>
