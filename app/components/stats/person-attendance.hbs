{{#if this.loadData.isRunning}}
  <div class="h-96 w-full flex items-center justify-center text-gray-700" ...attributes>
    <Loader @label="Statistiek aan het maken..." />
  </div>
{{else}}
  <div class="mt-2">
    {{#each this.groups as |group|}}
      <div class="grid gap-4 grid-cols-4 py-4">
        <div class="text-3xl sm:text-4xl font-extrabold text-primary-900">
          {{group.percentage}} %
        </div>
        <ul class="col-span-3 mt-2 p-4 border-t-2 border-primary-900">
          {{#each (sort-by "familyName" group.people) as |person|}}
            <li class="text-base text-gray-900">
              <LinkTo @route="people.person" @model={{person.id}}>
                {{person.fullName}}
              </LinkTo>
            </li>
          {{/each}}
        </ul>
      </div>
    {{/each}}
  </div>
{{/if}}

{{yield}}