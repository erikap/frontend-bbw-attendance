{{page-title "Profile"}}

<div class="mt-4 px-4">
  <h2 class="text-lg text-gray-800">Wachtwoord wijzigen</h2>
  {{#if this.changePassword.lastSuccessful.value}}
    <div class="mt-8 rounded-md bg-green-50 p-4">
      <div class="flex">
        <div class="shrink-0">
          {{svg-jar "solid-check-circle" class="h-5 w-5 text-green-400"}}
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-green-800">
            Gelukt!
          </h3>
          <div class="mt-2 text-sm text-green-700">
            <p>
              Je wachtwoord is gewijzigd.
            </p>
          </div>
        </div>
      </div>
    </div>
  {{else}}
    <form class="mt-8 space-y-6 max-w-sm" {{on "submit" (perform this.changePassword)}}>
      {{#if this.errorMessage}}
        <div class="rounded-md bg-primary-50 p-4">
          <div class="flex">
            <div class="shrink-0">
              {{svg-jar "solid-exclamation-circle" class="h-5 w-5 text-primary-400"}}
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-primary-800">
                Wachtwoord wijzigen mislukt
              </h3>
              <div class="mt-2 text-sm text-primary-700">
                <p>
                  {{this.errorMessage}}
                </p>
              </div>
            </div>
          </div>
        </div>
      {{/if}}

      <div class="space-y-4">
        <div>
          <label for="old-password" class="block text-sm font-medium text-gray-700">
            Huidig wachtwoord
          </label>
          <Input
            id="old-password"
            name="old-password"
            @type="password"
            @value={{this.oldPassword}}
            required
            class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 text-gray-900 rounded focus:outline-none focus:ring-primary-900 focus:border-primary-900 focus:z-10 sm:text-sm" />
        </div>
        <div>
          <label for="new-password" class="block text-sm font-medium text-gray-700">
            Nieuw wachtwoord
          </label>
          <Input
            id="new-password"
            name="new-password"
            @type="password"
            @value={{this.newPassword}}
            required
            class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 text-gray-900 rounded focus:outline-none focus:ring-primary-900 focus:border-primary-900 focus:z-10 sm:text-sm" />
        </div>
        <div>
          <label for="new-password-confirmation" class="block text-sm font-medium text-gray-700">
            Herhaal nieuw wachtwoord
          </label>
          <Input
            id="new-password-confirmation"
            name="new-password-confirmation"
            @type="password"
            @value={{this.newPasswordConfirmation}}
            required
            class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 text-gray-900 rounded focus:outline-none focus:ring-primary-900 focus:border-primary-900 focus:z-10 sm:text-sm" />
        </div>
      </div>

      <div class="flex justify-end">
        <button
          type="submit"
          disabled={{or this.changePassword.isRunning this.isInvalid}}
          class="group relative py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-primary-900 hover:bg-primary-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-900 disabled:bg-gray-200">
          {{#if this.changePassword.isRunning}}
            {{svg-jar "loading-circle" class="animate-spin -ml-1 mr-3 h-5 w-5"}}
          {{else}}
            Wijzig wachtwoord
          {{/if}}
        </button>
      </div>
    </form>
  {{/if}}
</div>
{{outlet}}